{% block body %}
    
<div class="container py-5">
    <h1 class="text-center mb-4"><i class="fas fa-plus"></i> Create New Category</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}

        <div class="mb-3">
            <label for="{{ form.categoryName.vars.id }}" class="form-label"><i class="fas fa-tag"></i> Category Name</label>
            {{ form_widget(form.categoryName, { 'attr': {'class': 'form-control', 'placeholder': 'Enter category name', 'required': 'required'}}) }}
            {{ form_errors(form.categoryName) }}
        </div>

        <div class="mb-3">
            <label for="{{ form.subfield.vars.id }}" class="form-label"><i class="fas fa-code-branch"></i> Subfield</label>
            {{ form_widget(form.subfield, { 'attr': {'class': 'form-control', 'placeholder': 'Enter subfield', 'required': 'required'}}) }}
            {{ form_errors(form.subfield) }}
        </div>

        <div class="mb-3">
            <label for="{{ form.typeOfFunding.vars.id }}" class="form-label"><i class="fas fa-hand-holding-usd"></i> Type of Funding</label>
            {{ form_widget(form.typeOfFunding, { 'attr': {'class': 'form-control', 'placeholder': 'Enter type of funding'}}) }}
            {{ form_errors(form.typeOfFunding) }}
        </div>

        <div class="mb-3">
            <label for="{{ form.profitabilityIndex.vars.id }}" class="form-label"><i class="fas fa-chart-line"></i> Profitability Index</label>
            {{ form_widget(form.profitabilityIndex, { 'attr': {'class': 'form-control', 'placeholder': 'Enter profitability index'}}) }}
            {{ form_errors(form.profitabilityIndex) }}
        </div>

        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
    {{ form_end(form) }}
</div>
</body>
{% endblock %}
