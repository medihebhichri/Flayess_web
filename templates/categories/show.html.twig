
{% extends 'base2.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        .page-header {
            background-color: #eee;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .card {
            border: none;
            border-radius: .25rem;
            box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 8%), 0 0.0625rem 0.125rem rgb(0 0 0 / 12%), 0 0 0 rgb(0 0 0 / 16%);
            margin-bottom: 1rem;
        }
        .card-header {
            padding: .75rem 1.25rem;
            background-color: rgba(0, 0, 0, 0.03);
            border-bottom: none;
        }
        .card-body {
            padding: 1.25rem;
        }
        .btn-primary {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            color: #fff;
            background-color: #0069d9;
            border-color: #0062cc;
        }
    </style>
</head>
<body>
    <!-- Page content -->
    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="page-header text-center">
                    <h1 class="mb-0"><i class="fas fa-tag"></i> Category Detail</h1>
                </div> <!-- .page-header -->
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0"><i class="fas fa-tag"></i> {{ category.categoryName }}</h4>
                    </div> <!-- .card-header -->
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li><strong><i class="fas fa-code-branch"></i> Subfield:</strong> {{ category.subfield }}</li>
                            <li><strong><i class="fas fa-hand-holding-usd"></i> Type of Funding:</strong> {{ category.typeOfFunding }}</li>
                            <li><strong><i class="fas fa-chart-line"></i> Profitability Index:</strong> {{ category.profitabilityIndex }}</li>
                        </ul>
                    </div> <!-- .card-body -->
                </div> <!-- .card -->
                <div class="my-4 text-center">
                    <a href="{{ path('app_categories_index') }}" class="btn btn-outline-secondary mx-1"><i class="fas fa-arrow-left"></i> Back to list</a>
                    <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-primary mx-1"><i class="fas fa-edit"></i> Edit</a>
                </div> <!-- .my-4 -->
            </div> <!-- .col -->
        </div> <!-- .row -->
    </div> <!-- .container -->
</body>
</html>
{% endblock %}
