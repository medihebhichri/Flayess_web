{% extends 'base2.html.twig' %}
{% block title %}Projects{% endblock %}

{% block body %}
<body>

<div class="container py-5">
    <h1 class="text-center mb-4"><i class="fas fa-project-diagram"></i> Project Details</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="{{ project.image }}" alt="Project Image" class="img-fluid rounded mb-4">
        </div>
        <div class="col-md-6">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row"><i class="fas fa-heading"></i> Name:</th>
                        <td>{{ project.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-align-left"></i> Description:</th>
                        <td>{{ project.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-users"></i> Target Audience:</th>
                        <td>{{ project.targetAudience }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-bullseye"></i> Demand in Market:</th>
                        <td>{{ project.demandInMarket }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-calendar-alt"></i> Development Timeline:</th>
                        <td>{{ project.developmentTimeline }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-money-bill-wave"></i> Budget & Funding Requirements:</th>
                        <td>{{ project.budgetFundingRequirements }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-chart-line"></i> Risk Analysis:</th>
                        <td>{{ project.riskAnalysis }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-chart-pie"></i> Market Strategy:</th>
                        <td>{{ project.marketStrategy }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-sign-out-alt"></i> Exit Strategy:</th>
                        <td>{{ project.exitStrategy }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-users-cog"></i> Team Background:</th>
                        <td>{{ project.teamBackground }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-tags"></i> Tags:</th>
                        <td>{{ project.tags }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-star"></i> Unique Selling Points:</th>
                        <td>{{ project.uniqueSellingPoints }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-dollar-sign"></i> Daily Price of Assets:</th>
                        <td>{{ project.dailyPriceOfAssets }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="fas fa-percent"></i> Investorâ€™s Equity:</th>
                        <td>{{ project.investorsEquity }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-end mt-4">
                <a href="{{ path('app_projects_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                <a href="{{ path('app_projects_edit', {'id': project.id}) }}" class="btn btn-primary ms-2"><i class="fas fa-edit"></i> Edit</a>
                {{ include('projects/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</body>
{% endblock %}
